<launch>
    <machine name="local" address="localhost" default="true"/>


    <node name="Chisel" pkg="chisel_ros" type="ChiselNode" output="screen" >
        <param name="chunk_size_x" value="8"/>
        <param name="chunk_size_y" value="8"/>
        <param name="chunk_size_z" value="8"/>
        <param name="truncation_scale" value="2.0"/>
	<param name="integration_weight" value="1.0"/>
        <param name="use_voxel_carving" value="false"/>
        <param name="use_color" value="true"/>
        <param name="carving_dist_m" value="0.00 "/>
        <param name="voxel_resolution_m" value="0.1"/>
	<param name="far_plane_dist" value="5.0"/>
        <param name="near_plane_dist" value="0.3"/>
        <param name="base_transform" value="/world"/>
        <param name="depth_image_transform" value="/camera"/>
        <param name="color_image_transform" value="/camera"/>
        <param name="fusion_mode" value="DepthImage"/>
        <remap from="/depth_image" to="/open_quadtree_mapping/depth"/>
        <remap from="/depth_camera_info" to="/open_quadtree_mapping/depth_camerainfo"/>
        <remap from="/color_image" to="/open_quadtree_mapping/reference"/>
        <remap from="/color_camera_info" to="/open_quadtree_mapping/color_camerainfo"/>
        <remap from="/camera/depth_registered/points" to="/open_quadtree_mapping/pointcloud"/> 

    </node>
</launch>
